/* pages/eject/eject.wxss */

page {
	width: 100%;
	height: 100%;
}

.bg {
	width: 100%;
	height: 100%;
	position: relative;
	background: url("http://image.34a.com.cn/images/bg.png");
	background-size: 100% 100%;
}

.add {
	display: flex;
	color: white;
	height: 100rpx;
	font-size: 30rpx;
	padding-left: 30rpx;
	line-height: 100rpx;
	box-sizing: border-box;
}

.icon-shouye {
	font-size: 50rpx;
}

.wraper {
	width: 204rpx;
	height: 300rpx;
	position: absolute;
	color: white;
	left: 288rpx;
	text-align: center;
	top: 590rpx;
}

.img {
	width: 116rpx;
	height: 120rpx;
	position: absolute;
	top: 0;
	left: 50%;
	transform: translateX(-50%);
	background-image: url("http://image.34a.com.cn/images/xiong.png");
	background-size: 100% 100%;
}

.avatar {
	width: 94rpx;
	height: 94rpx;
	margin: 12rpx 11rpx;
}

.avatar image {
	width: 100%;
	height: 100%;
	border-radius: 50%;
}


.name {
	margin-top: 122rpx;
	line-height: 40rpx;
	font-size: 30rpx;
}

.wraper text {
	line-height: 0;
	font-size: 26rpx;
}

.wraper .btn {
	width: 100%;
	height: 75rpx;
	margin-top: 20rpx;
	background-image: url("http://image.34a.com.cn/images/btn.png");
	
	background-size: 100% 100%;
}