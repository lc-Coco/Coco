/* pages/redEnvelopes/redEnvelopes.wxss */
page {
	font-family: "PingFangSC-Regular";
	background-color: #fefefe;
}
.header {
	width: 100%;
	height: 195rpx;
	position: relative;
}

.top {
	width: 100%;
	height: 195rpx;
}

.top image {
	width: 100%;
	height: 100%;
}

.weiFare {
	width: 350rpx;
	height: 223rpx;
	position: absolute;
	bottom: -60rpx;
	left: 50%;
	transform: translateX(-50%);
}

image {
	width: 100%;
	height: 100%;
}

.wraper {
	width: 100%;
	height: 260rpx;
	font-size: 28rpx;
	color: black;
	padding-top: 50rpx;
	border-bottom: 10rpx solid #e5e4e4;
}
.header .nav-money {
	width: 80rpx;
	height: 80rpx;
	position: absolute;
	right: 25rpx;
	top: 10rpx;
	background-color: blue;
	border-radius: 50%;
}
.wraper .title {
	font-size: 30rpx;
	padding-left: 26rpx;
}

.wraper .main {
	display: flex;
	justify-content: space-around;
	align-content: space-around;
	padding: 0rpx 40rpx;
}

.ranking {
	position: relative;
	text-align: center;
	width: 125rpx;
	height: 200rpx;
	padding-top: 35rpx;
}

.ranking .image {
	width: 90rpx;
	height: 90rpx;
	margin: 0 auto;
}

.ranking .image image {
	width: 100%;
	height: 100%;
	border-radius: 50%;
}

.ranking .name {
	line-height: 50rpx;
}

.ranking .sumo {
	font-size: 24rpx;
	color: #fd3435;
}

.ranking .unm {
	position: absolute;
	top: 25rpx;
	left: -20rpx;
	color: #949eac;
}

.ranking .crown {
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	left: 6rpx;
	top: 23rpx;
	transform: rotate(-40deg);
}

.crown image {
	width: 100%;
	height: 100%;
}

.summary {
	width: 100%;
	height: 190rpx;
	border-bottom: 10rpx solid #e5e4e4;
}

.summary .total {
	display: flex;
	height: 60rpx;
	color: #888888;
	font-size: 28rpx;
	line-height: 60rpx;
	border-top: 2rpx solid #e5e5e5;
}

.summary .viewImg {
	width: 28rpx;
	height: 28rpx;
	margin-left: 30rpx;
	margin-top: 5rpx;
}

.summary .viewImg image {
	width: 100%;
	height: 100%;
}

.summary .text {
	padding-left: 20rpx;
}

.summary .money {
	color: #f90909;
}

.total .name {
	padding-right: 20rpx;
	color: #0d76ed;
}

.message {
	width: 100%;
	height: 450rpx;
	padding: 0 30rpx;
	box-sizing: border-box;
}
.message .content {
	display: flex;
	height: 150rpx;
	line-height: 150rpx;
	justify-content: space-between;
	border-bottom: 2rpx solid #e5e5e5;
}
.content .left {
	display: flex;
	width: 400rpx;
	height: 150rpx;
}

.left .menu {
	display: flex;
	line-height: 50rpx;
	width: 370rpx;
	font-size: 24rpx;
	color: #9fa4b1;
	align-items: center;
}

.menu .info {
	padding-left: 20rpx;
}
.menu .img {
	width: 90rpx;
	height: 90rpx;
}
.menu .img image {
	width: 100%;
	height: 100%;
	border-radius: 50%;
}

.menu .name {
	font-size: 30rpx;
	padding-right: 18rpx;
	color: green;
}

.menu .just {
	color: #fd3435;
	font-size: 30rpx;
	padding-left: 10rpx;
}
.right text {
	font-size: 50rpx;
	color: #fd3435;
}
.right .icon {
	width: 40rpx;
	height: 54rpx;
}
.right .icon image {
	width: 100%;
	height: 100%;
}
