#header {
	width: 100%;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	font-size: 30rpx;
	border: 2rpx solid #e6e6e6;
}
#main .title {
	width: 100%;
	display: flex;
	height: 60rpx;
	align-items: center;
	font-size: 30rpx;
	box-sizing: border-box;
	background-color: #d9484b;
}
.title > view {
	color: white;
	text-align: center;
	box-sizing: border-box;
	border-right: 2px solid #000;
}

.title > view:last-of-type {
	border: none;
}

.ranking {
	width: 90rpx;
}
.name {
	width: 340rpx;
}

.fans {
	width: 150rpx;
}
.total {
	width: 170rpx;
}
#main .inner {
	width: 100%;
	height: 100%;
	font-size: 28rpx;
}

.inner .message {
	display: flex;
	height: 80rpx;
	border-bottom: 2rpx solid #e3e3e3;
}

.message > view {
	text-align: center;
	line-height: 80rpx;
}
.message .name {
	display: flex;
}

.message .name .img {
	flex-basis: 60rpx;
	height: 60rpx;
	margin: 10rpx 20rpx 10rpx 20rpx;
}
.message .name .img image {
    width: 100%;
	height: 100%;
	border-radius: 50rpx;
}

.message .name .n-name {
    flex: 1;
    overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
} 