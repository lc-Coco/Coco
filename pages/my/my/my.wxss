#header {
	width: 100%;
	height: 520rpx;
	border-bottom: 10rpx solid #f5f5f5;
}
#header image {
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
#header .top {
	width: 100%;
	height: 266rpx;
	position: relative;
	background-size: 100% 100%;
	background-image: url("http://image.34a.com.cn/images/mybg.png");
}

.top .t-img {
	position: absolute;
	width: 172rpx;
	height: 172rpx;
	left: 50%;
	transform: translateX(-50%);
	bottom: -50rpx;
}

#header .name {
	width: 100%;
	padding-top: 66rpx;
	text-align: center;
}

#header .inner {
	display: flex;
	justify-content: space-around;
}

.inner .num {
	line-height: 50rpx;
	height: 50rpx;
	font-size: 30rpx;
	color: #fb6363;
	font-weight: 600;
}
.inner .iconfont {
	line-height: 50rpx;
	font-size: 60rpx;
	color: #a6c5f6;
}
.inner .content {
	display: flex;
	height: 110rpx;
	font-size: 26rpx;
	color: #a0a5b2;
	text-align: center;
	padding-top: 20rpx;
	flex-direction: column;
	justify-content: space-around;
}

#main {
	width: 100%;
	height: 100%;
	font-size: 30rpx;
	padding: 0 30rpx;
	box-sizing: border-box;
}

#main .box {
	display: flex;
	height: 80rpx;
	align-items: center;
	justify-content: space-between;
	border-bottom: 2rpx solid #ebedf2;
}

#main .box .left {
	width: 50%;
	display: flex;
}
#main .iconfont {
	font-size: 40rpx;
}
#main .box:first-of-type {
	color: #9ed5e4;
}
#main .box:nth-of-type(2) {
	color: #ff6e74;
}
#main .box:nth-of-type(3) {
	color: #4e8cee;
}
#main .box:nth-of-type(4) {
	color: #ff5978;
}
#main .box:nth-of-type(5) {
	color: #a6c5f6;
}
#main .box:nth-of-type(6) {
	color: #66c1ff;
}

#main .box:last-of-type {
	color: #9fe4ff;
}

#main .box .title{
	padding-left: 30rpx;
	color: #464950;
}
#main .box .right {
	padding-left: 30rpx;
	color: #464950;
}

#main .box .m-right {
	display: flex;
	color: #464950;	
}

.m-right .money {
	font-size: 30rpx;
	padding-right: 30rpx;
	color: #FB6363;
}